#
# PRODUCTION
#
production:
  adapter: postgresql
  encoding: unicode
  database: <%= scope.lookupvar('gitlab::db_name') %>
  pool: 5
  username: <%= scope.lookupvar('gitlab::db_user') %>
  password: <%= scope.lookupvar('gitlab::db_pass') %>
  host: <%= scope.lookupvar('gitlab::db_host') %>
  port: <%= scope.lookupvar('gitlab::db_port') %>
